{
  "name": "pico-8-token-tracker",
  "displayName": "PICO-8 Token Tracker",
  "description": "Tracks and visualizes token usage across all .p8 files in a PICO-8 project.",
  "version": "1.0.1",
  "publisher": "Mesgegra",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:pico-8",
    "onLanguage:pico-8-lua"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pico-8",
        "aliases": ["PICO-8"],
        "extensions": [".p8"]
      },
      {
        "id": "pico-8-lua",
        "aliases": ["PICO-8 Lua"],
        "extensions": [".lua"]
      }
    ],
    "commands": [
      {
        "command": "pico-8-token-tracker.reloadIndex",
        "title": "PICO-8: Reload Token Index"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "references": [
    { "path": "./server" }
  ],
  "repository": {
  "type": "git",
  "url": "https://github.com/redowul/pico-8-token-tracker"
  },
  "bugs": {
    "url": "https://github.com/redowul/pico-8-token-tracker/issues"
  },
  "homepage": "https://github.com/redowul/pico-8-token-tracker#readme"
}
